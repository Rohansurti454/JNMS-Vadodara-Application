<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/app_background"
    android:backgroundTint="#46FFFFFF"
    android:backgroundTintMode="screen"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/orange1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JNMS Vadodara App"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/shreeGurudevTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shree Gurudev"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="30dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginBottom="20dip"
        android:textColor="@color/black"
        android:textAlignment="center"/>
    <EditText
        android:id="@+id/userNameET"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="18sp"
        android:inputType="number"
        android:autofillHints="username"
        android:hint="Enter Janganana Id"
        android:background="@drawable/edt_drawable"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/round_person_28"
        android:layout_margin="15dip"
        android:padding="10dp" />

    <EditText
        android:id="@+id/passwaordET"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="18sp"
        android:inputType="number"
        android:autofillHints="password"
        android:hint="Enter Password"
        android:background="@drawable/edt_drawable"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/round_lock_28"
        android:layout_margin="15dip"
        android:paddingLeft="10dp" />

    <TextView
        android:id="@+id/pswdTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Enter a 4 Digit Password"
        android:textSize="13sp"
        android:layout_margin="5dp"
        android:textColor="#3B7AF8" />


    <android.widget.Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="LOGIN"
        android:textSize="15sp"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginBottom="20dip"
        android:layout_marginTop="30dip"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:background="@drawable/btn_drawable_login" />

    <TextView
        android:id="@+id/frgtPswdTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgot_password_txt"
        android:layout_gravity="right"
        android:layout_marginRight="22dip"/>

    <TextView
        android:id="@+id/newRegistrationTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_registration_txt"
        android:layout_marginTop="60dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginBottom="20dip"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textColor="@color/orange"/>



</LinearLayout>