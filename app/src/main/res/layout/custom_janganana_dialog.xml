<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:padding="10dp"
        android:background="@drawable/dialogbox_drawable">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/outline_cancel_24"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="10dp"
            android:id="@+id/cancel_button_imgv"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_error_msg"
            android:text="Error"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:layout_gravity="top"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_msg"
            android:text="Janganana No can not be blank"
            android:textColor="#808080"
            android:textSize="12dp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"/>

        <android.widget.Button
            android:id="@+id/btnOkay"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:text="OK"
            android:textStyle="normal"
            android:textSize="14sp"
            android:background="@drawable/dialogbox_btn_drawable"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#C70000"
            android:elevation="-10dp"
            android:layout_marginTop="15dp"/>


    </LinearLayout>
</LinearLayout>